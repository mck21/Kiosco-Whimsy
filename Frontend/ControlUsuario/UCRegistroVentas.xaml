<UserControl x:Class="Kiosco_Whimsy.Frontend.ControlUsuario.UCRegistroVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kiosco_Whimsy.Frontend.ControlUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <!-- Parte Superior -->
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                <mat:PackIcon Kind="Shop" Height="40" Width="40" Margin="6" Foreground="White"/>
                <TextBlock Text="REGISTRO DE VENTAS" FontSize="24" Margin="10" FontWeight="Bold" Foreground="White"/>
            </StackPanel>
            <Button x:Name="btnAnyadirVenta" Click="btnAnyadirVenta_Click" Grid.Column="1" Grid.Row="1" Height="40" Width="40"  Style="{DynamicResource MaterialDesignIconForegroundButton}">
                <Image Source="/Recursos/Iconos/FaSolidCartPlus.png" Height="20" Width="20" />
            </Button>

            <!-- Filtros y búsquedas -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 10 0 0">
                <TextBlock Text="Busqueda por Empleado" Foreground="White" FontSize="15" Margin="20 0 0 10"/>
                <TextBlock Text="Busqueda por Fecha (datepicker)" Foreground="White" FontSize="15" Margin="20 0 0 10"/>
            </StackPanel>

        </Grid>

        <!-- Datos de los usuarios -->
        <DataGrid x:Name="dgVentas" AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False" ItemsSource="{Binding listaVentas}">            
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Venta" Binding="{Binding Idventa}"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}"/>
                <DataGridTextColumn Header="Empleado" Binding="{Binding Usuario.Persona.Nombre}"/>
                <DataGridTemplateColumn Header="Cliente y CIF">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Cliente.Persona.Nombre}"/>
                                <TextBlock Text=": "/>
                                <TextBlock Text="{Binding Cliente.Cif}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>                
            </DataGrid.Columns>
            <!-- Editar/Eliminar Usuario -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Editar" x:Name="btnEditarItem" Click="btnEditarItem_Click">
                        <MenuItem.Icon>
                            <mat:PackIcon Kind="Edit"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Eliminar" x:Name="btnEliminarItem" Click="btnEliminarItem_Click" Foreground="Red" >
                        <MenuItem.Icon>
                            <mat:PackIcon Kind="Delete" Foreground="Red"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </DockPanel>
</UserControl>
